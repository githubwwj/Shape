<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="36dp"
            android:background="@drawable/line_gradient"
            android:gravity="center"
            android:text="line gradient"
            android:textColor="@android:color/white"
            android:textSize="16sp" />


        <TextView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="36dp"
            android:background="@drawable/radial_gradient"
            android:gravity="center"
            android:text="radial gradient"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="36dp"
            android:background="@drawable/sweep_gradient"
            android:gravity="center"
            android:text="sweep gradient"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="36dp"
            android:background="@drawable/dash_shape"
            android:gravity="center"
            android:text="dash shape"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginBottom="36dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ring_shape"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>